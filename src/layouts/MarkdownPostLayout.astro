---
import BaseLayout from "./BaseLayout.astro";
import '../styles/posts.css'

const {frontmatter} = Astro.props;
---

<BaseLayout>
    <article class="post">
        <header class="post__header">
            <div class="post__header__text">
                <h1 class="post__title">{frontmatter.title}</h1>
                <p class="post__author">By {frontmatter.author}</p>
                <!-- <p class="post__pubDate">Published on {frontmatter.pubDate}</p> -->
                <p class="post__description">{frontmatter.description}</p>
            </div>
            {frontmatter.image && 
                <img
                    src={frontmatter.image.url}
                    alt={frontmatter.image.altText}
                    class="post__img"
                />}
        </header>
        <main class="post__body">
            <slot />
        </main>
        <footer>
            <div class="post__tags">
                {frontmatter.tags.map((tag : string) => (
                    <a class="tag no-underline" href={`/tags/${tag}`}>
                        {tag}
                    </a>
                ))}
            </div>
        </footer>
    </article>
</BaseLayout>